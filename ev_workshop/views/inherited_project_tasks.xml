<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="inherited_project_tasks_view_form" model="ir.ui.view">
        <field name="name">inherited.project.tasks.view.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra_info']" position="replace">
                <page string="Mechanic Request">
                    <group>
                        <field name="accept_req"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>